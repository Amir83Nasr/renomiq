{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "identifier": "com.renomiq.renamer",
  "productName": "Renomiq",
  "version": "0.1.0",
  "build": {
    "beforeBuildCommand": "pnpm build",
    "beforeDevCommand": "pnpm dev",
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Renomiq",
        "width": 800,
        "height": 700,
        "minWidth": 800,
        "minHeight": 500,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "dragDropEnabled": true,
        "transparent": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["default"]
    }
  },
  "bundle": {
    "active": true,
    "category": "DeveloperTool",
    "copyright": "Â© 2024 Renomiq",
    "shortDescription": "Batch file renaming tool",
    "longDescription": "A powerful desktop batch file renaming tool built with Tauri and Next.js",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "targets": ["dmg", "app", "appimage", "deb", "rpm", "msi", "nsis"],
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null,
      "minimumSystemVersion": "10.13"
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "wix": {
        "language": ["en-US"]
      },
      "nsis": {
        "languages": ["English"],
        "installMode": "both"
      }
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      },
      "deb": {
        "files": {}
      }
    },
    "android": {
      "minSdkVersion": 24
    },
    "iOS": {
      "minimumSystemVersion": "13.0",
      "developmentTeam": null
    }
  }
}
